@model IEnumerable<WebStore.Domain.Entities.Product>

@{
    ViewData["Title"] = "Список продуктов";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SectionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(p => product.Id)
                </td>
                <td>
                    @Html.DisplayFor(p => product.Name)
                </td>
                <td>
                    @Html.DisplayFor(p => product.Order)
                </td>
                <td>
                    @Html.DisplayFor(p => product.SectionId)
                </td>
                <td>
                    @Html.DisplayFor(p => product.BrandId)
                </td>
                <td>
                    @Html.DisplayFor(p => product.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(p => product.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=product.Id }) |
                    @Html.ActionLink("Details", "Details", new {/* id=item.PrimaryKey */}) |
                    @Html.ActionLink("Delete", "Delete", new { id = product.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

