@model WebStore.Models.Employee

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h3>Карточка сотрудника</h3>
    <table>
        <tbody>
            <tr>
                <td>Фамилия</td>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <td>Имя</td>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <td>Отчество</td>
                <td>@Model.Patronymic</td>
            </tr>
            <tr>
                <td>Возраст</td>
                <td>@Model.Age</td>
            </tr>
            <tr>
                <td>Телефон</td>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <td>Город</td>
                <td>@Model.City</td>
            </tr>
            <tr>
                <td>Должность</td>
                <td>@Model.Position</td>
            </tr>
            <tr>
                <td>Дата трудоустройства</td>
                <td>@Model.EmploymentDate.ToString("dd.MM.yyyy")</td>
            </tr>
        </tbody>
    </table>
    <hr />
    <div>
        <a href="~/Home/Employees">К списку сотрудников</a>
    </div>
    <div>
        <a href="~/">Домой</a>
    </div>
</body>
</html>