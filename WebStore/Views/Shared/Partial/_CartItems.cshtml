@model CartViewModel

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Shopping Cart</li>
            </ol>
        </div>
        @if (Model is null || !Model.Products.Any())
        {
            <p>Корзина пуста</p>
        }

        else 
        { 
            <div class="table-responsive cart_info">
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td class="image">Товар</td>
                            <td class="description"></td>
                            <td class="price">Цена</td>
                            <td class="quantity">Количество</td>
                            <td class="total">Стоимость</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var (product, count) in Model.Products)
                        {
                            <partial name="Partial/_CartItem" model="(product, count)" />
                        }
                    </tbody>
                </table>
            </div>
        }        
    </div>
</section> <!--/#cart_items-->